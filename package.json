{
    "name": "qore-vscode",
    "displayName": "Qore",
    "description": "Qore Language Support",
    "version": "0.1.1",
    "publisher": "qoretechnologies",
    "engines": {
        "vscode": "^1.5.0"
    },
    "license": "SEE LICENSE IN LICENSE.txt",
    "bugs": {
        "url": "https://github.com/qorelanguage/qore-vscode/issues"
    },
    "homepage": "https://github.com/qorelanguage/qore-vscode",
    "categories": [
        "Languages",
        "Linters",
        "Other"
    ],
    "galleryBanner": {
        "color": "#9ccb3b",
        "theme": "light"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/qorelanguage/qore-vscode"
    },
    "keywords": [
        "qore",
        "language",
        "programming",
        "programminglanguage",
        "languageserver"
    ],
    "activationEvents": [
        "onLanguage:qore"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "languages": [{
            "id": "qore",
            "aliases": ["Qore", "qore", "qr"],
            "extensions": [".q",".qm",".qtest",".ql",".qc",".qsd",".qfd",".qwf",".qjob",".qclass",".qconst",".qsm",".qconn"],
            "firstLine": "^#!.*mode:[ ]*qore",
            "configuration": "./qore.configuration.json"
        }],
        "grammars": [{
            "language": "qore",
            "scopeName": "source.qore",
            "path": "./syntaxes/qore.tmLanguage.json"
        }],
        "configuration": {
            "type": "object",
            "title": "Qore configuration",
            "properties": {
                "qore.logging": {
                    "type": "boolean",
                    "default": false,
                    "description": "Whether to log QLS operations."
                },
                "qore.logFile": {
                    "type": ["string", "null"],
                    "default": null,
                    "description": "Specifies QLS log file path. If logging is turned on, all the operations will be logged to this file."
                },
                "qore.logVerbosity": {
                    "type": "number",
                    "default": 0,
                    "description": "Verbosity of QLS logging. From 0 to 2."
                },
                "qore.appendToLog": {
                    "type": "boolean",
                    "default": false,
                    "description": "Append to QLS log file instead of overwriting it on each restart."
                }
            }
        },
        "configurationDefaults": {
            "[qore]": {
                "editor.tabSize": 4,
                "editor.insertSpaces": true,
                "editor.quickSuggestions": true
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "update-vscode": "node ./node_modules/vscode/bin/install",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    },
    "dependencies": {
        "vscode-languageclient": "^2.6.3"
    }
}
